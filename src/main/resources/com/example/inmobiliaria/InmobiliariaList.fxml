<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contenedorListado" spacing="20" style="-fx-background-color: #D4DE95;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.InmobiliariaListController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Button onAction="#onVolverDashboard" style="-fx-background-color: #636B2F; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="â† Volver al menu" />
        <Region HBox.hgrow="ALWAYS" />
        <Label prefHeight="40.0" prefWidth="440.0" style="-fx-text-fill: #3D4127; -fx-font-weight: bold;" text="Listado de Inmuebles">
            <font>
                <Font name="Century Gothic" size="39.0" />
            </font>
        </Label>
    </HBox>

    <VBox style="-fx-background-color: #BAC095; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label style="-fx-text-fill: #3D4127; -fx-font-size: 16px; -fx-font-weight: bold;" text="Mis Inmuebles">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaInmuebles" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTipo" prefWidth="131.20005148649216" text="Tipo" />
                <TableColumn fx:id="colCiudad" prefWidth="191.9999237060547" text="Ciudad" />
                <TableColumn fx:id="colHabitaciones" prefWidth="177.60000610351562" text="Habitaciones" />
                <TableColumn fx:id="colPisos" prefWidth="136.79998779296875" text="Pisos" />
            <TableColumn fx:id="colPrecio" prefWidth="94.4000244140625" text="Precio" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button onAction="#onCrearInmueble" style="-fx-background-color: #636B2F; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5; -fx-font-weight: bold;" text="Nuevo Inmueble">
                <font>
                    <Font name="Arial Bold" size="15.0" />
                </font>
            </Button>
            <Button fx:id="btnEliminar" onAction="#onEliminarInmueble" style="-fx-background-color: #942222; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5; -fx-font-weight: bold;" text="Eliminar Inmueble" />
        </HBox>
    </VBox>
</VBox>
